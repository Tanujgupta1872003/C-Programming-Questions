#include<stdio.h>
#include<conio.h>
void main()
{
    float cp,sp,loss,profit;
    printf("Enter Cost Price: ");
    scanf("%f",&cp);

    printf("Enter Selling Price: ");
    scanf("%f",&sp);

    if (sp>cp){
        profit = sp - cp;
        printf("Profit = Rs. %f\n",profit);
    }
    else if(cp>sp){
        loss = cp - sp;
        printf("Loss = Rs. %f\n",loss);
    }
    else{
        printf("Their is neither profit or Loss");
    }
getch();
}
